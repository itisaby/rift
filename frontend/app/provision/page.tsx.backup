"use client"

import { useEffect, useState } from "react"
import Link from "next/link"
import { ArrowLeft, Zap, Server, Database, Globe, Package, CheckCircle2, Loader2 } from "lucide-react"
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from "@/components/ui/card"
import { Badge } from "@/components/ui/badge"
import { Button } from "@/components/ui/button"

const API_URL = process.env.NEXT_PUBLIC_API_URL || "http://localhost:8000"

interface Template {
    id: string
    name: string
    description: string
    resource_type: string
    estimated_cost_per_month?: number
    icon?: string
}

interface ProvisionRequest {
    template_id: string
    environment: string
    auto_approve: boolean
}

interface Project {
    project_id: string
    name: string
}

export default function ProvisionPage() {
    const [templates, setTemplates] = useState<Template[]>([])
    const [projects, setProjects] = useState<Project[]>([])
    const [selectedProject, setSelectedProject] = useState<string | null>(null)
    const [loading, setLoading] = useState(true)
    const [provisioning, setProvisioning] = useState<string | null>(null)

    useEffect(() => {
        fetchTemplates()
        fetchProjects()
    }, [])

    const fetchProjects = async () => {
        try {
            const response = await fetch(`${API_URL}/projects`)
            if (response.ok) {
                const data = await response.json()
                setProjects(data)
                if (data.length > 0) {
                    setSelectedProject(data[0].project_id)
                }
            }
        } catch (error) {
            console.error("Failed to fetch projects:", error)
        }
    }

    const fetchTemplates = async () => {
        try {
            console.log("Fetching from:", `${API_URL}/provision/templates`)
            const response = await fetch(`${API_URL}/provision/templates`)

            if (!response.ok) {
                throw new Error(`HTTP error! status: ${response.status}`)
            }

            const data = await response.json()
            console.log("âœ… Templates received:", data)

            if (Array.isArray(data)) {
                setTemplates(data)
            } else if (data && Array.isArray(data.templates)) {
                setTemplates(data.templates)
            } else {
                setTemplates([])
            }
            setLoading(false)
        } catch (error) {
            console.error("âŒ Failed to fetch templates:", error)
            // Set some default templates for demo
            setTemplates([
                {
                    id: "web-app",
                    name: "Web Application",
                    description: "Production-ready web application with load balancer",
                    resource_type: "droplet",
                    estimated_cost_per_month: 24,
                    icon: "ðŸŒ"
                },
                {
                    id: "database",
                    name: "Managed Database",
                    description: "PostgreSQL database cluster with automated backups",
                    resource_type: "database",
                    estimated_cost_per_month: 15,
                    icon: "ðŸ—„ï¸"
                },
                {
                    id: "api-server",
                    name: "API Server",
                    description: "High-performance API server with auto-scaling",
                    resource_type: "droplet",
                    estimated_cost_per_month: 18,
                    icon: "âš¡"
                },
                {
                    id: "storage",
                    name: "Object Storage",
                    description: "S3-compatible object storage with CDN",
                    resource_type: "spaces",
                    estimated_cost_per_month: 5,
                    icon: "ðŸ“¦"
                },
                {
                    id: "kubernetes",
                    name: "Kubernetes Cluster",
                    description: "Managed Kubernetes cluster for container orchestration",
                    resource_type: "kubernetes",
                    estimated_cost_per_month: 36,
                    icon: "â˜¸ï¸"
                }
            ])
            setLoading(false)
        }
    }

    const handleProvision = async (templateId: string) => {
        setProvisioning(templateId)

        try {
            console.log("Provisioning template:", templateId, "for project:", selectedProject)

            // Backend expects: POST /provision/template/{template_id}?user_id=X&params={}
            const userId = "frontend_user_" + Date.now()
            const url = new URL(`${API_URL}/provision/template/${templateId}`)
            url.searchParams.append('user_id', userId)
            url.searchParams.append('params', JSON.stringify({}))

            if (selectedProject) {
                url.searchParams.append('project_id', selectedProject)
            }

            console.log("Provisioning URL:", url.toString())

            const response = await fetch(url.toString(), {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            })

            if (!response.ok) {
                const errorData = await response.json().catch(() => ({ detail: 'Unknown error' }))
                throw new Error(errorData.detail || `HTTP error! status: ${response.status}`)
            }

            const data = await response.json()
            console.log("âœ… Provision response:", data)

            alert(`âœ… Provisioning initiated for ${templateId}!\n\nStatus: ${data.status || 'pending'}\nJob ID: ${data.job_id || 'N/A'}\n\n${data.message || ''}`)
        } catch (error) {
            console.error("âŒ Failed to provision:", error)
            const errorMessage = error instanceof Error ? error.message : 'Unknown error'
            alert(`âŒ Failed to provision ${templateId}.\n\nError: ${errorMessage}`)
        } finally {
            setProvisioning(null)
        }
    }

    const getResourceIcon = (type: string) => {
        switch (type) {
            case 'droplet': return <Server className="w-6 h-6 text-cyan-400" />
            case 'database': return <Database className="w-6 h-6 text-purple-400" />
            case 'spaces': return <Package className="w-6 h-6 text-green-400" />
            case 'kubernetes': return <Globe className="w-6 h-6 text-blue-400" />
            default: return <Zap className="w-6 h-6 text-cyan-400" />
        }
    }

    return (
        <div className="min-h-screen cyber-gradient scanline">
            <header className="border-b border-cyan-500/30 bg-linear-to-r from-black/80 via-cyan-950/30 to-black/80 backdrop-blur-xl sticky top-0 z-50 shadow-lg shadow-cyan-500/10">
                <div className="container mx-auto px-8 py-5">
                    <div className="flex items-center justify-between">
                        <div className="flex items-center gap-4">
                            <Link href="/">
                                <Button variant="outline" size="sm" className="gap-2">
                                    <ArrowLeft className="w-4 h-4" />
                                    <span className="font-mono">BACK</span>
                                </Button>
                            </Link>
                            <div>
                                <h1 className="text-3xl font-black text-transparent bg-clip-text bg-linear-to-r from-purple-400 via-cyan-400 to-purple-400 tracking-wider animate-glow">
                                    INFRASTRUCTURE PROVISIONING
                                </h1>
                                <p className="text-sm text-cyan-400/70 font-mono tracking-wide">
                                    DEPLOY NEW RESOURCES WITH ONE CLICK
                                </p>
                            </div>
                        </div>

                        <div className="flex items-center gap-2">
                            <Zap className="w-4 h-4 text-purple-400 animate-pulse" />
                            <span className="text-xs text-cyan-400 font-mono">READY</span>
                        </div>
                    </div>
                </div>
            </header>

            <main className="container mx-auto px-8 py-10">
                {loading ? (
                    <div className="flex flex-col items-center justify-center h-96">
                        <div className="relative">
                            <div className="w-20 h-20 border-4 border-cyan-500/30 border-t-cyan-400 rounded-full animate-spin"></div>
                            <div className="absolute inset-0 w-20 h-20 border-4 border-purple-500/30 border-b-purple-400 rounded-full animate-spin" style={{ animationDirection: 'reverse', animationDuration: '1.5s' }}></div>
                        </div>
                        <p className="text-cyan-400 text-xl font-mono mt-6 animate-pulse">LOADING TEMPLATES...</p>
                    </div>
                ) : (
                    <>
                        {/* Info Card */}
                        <Card className="mb-10 border-purple-500/30">
                            <CardContent className="p-6">
                                <div className="flex items-start gap-4">
                                    <div className="p-3 rounded-lg bg-purple-500/20 border border-purple-500/30">
                                        <Zap className="w-8 h-8 text-purple-400" />
                                    </div>
                                    <div>
                                        <h2 className="text-xl font-bold text-cyan-300 mb-2">AUTOMATED INFRASTRUCTURE DEPLOYMENT</h2>
                                        <p className="text-sm text-cyan-300/70 leading-relaxed">
                                            Select a template below to provision new infrastructure resources. Our AI agents will handle the deployment,
                                            configuration, and monitoring automatically. All resources are deployed to DigitalOcean with best practices applied.
                                        </p>
                                    </div>
                                </div>
                            </CardContent>
                        </Card>

                        {/* Templates Grid */}
                        <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                            {templates.map((template, index) => (
                                <Card
                                    key={template.id}
                                    className="group relative overflow-hidden hover:scale-105 transition-all duration-300 hover:border-purple-400/50 hover:shadow-lg hover:shadow-purple-500/20"
                                    style={{ animationDelay: `${index * 0.1}s` }}
                                >
                                    <div className="absolute top-0 right-0 w-32 h-32 bg-purple-500/5 rounded-full blur-2xl group-hover:bg-purple-500/10 transition-all"></div>

                                    <CardHeader className="pb-4">
                                        <div className="flex items-start justify-between mb-3">
                                            <div className="text-4xl">{template.icon || "âš¡"}</div>
                                            {getResourceIcon(template.resource_type)}
                                        </div>
                                        <CardTitle className="text-xl font-bold text-cyan-300 font-mono mb-2">
                                            {template.name}
                                        </CardTitle>
                                        <CardDescription className="text-sm text-cyan-300/70">
                                            {template.description}
                                        </CardDescription>
                                    </CardHeader>

                                    <CardContent>
                                        <div className="space-y-4">
                                            <div className="flex items-center justify-between py-2 border-t border-cyan-500/20">
                                                <span className="text-xs text-cyan-400/70 font-mono uppercase">Resource Type</span>
                                                <Badge variant="secondary" className="font-mono">
                                                    {template.resource_type}
                                                </Badge>
                                            </div>

                                            {template.estimated_cost_per_month && (
                                                <div className="flex items-center justify-between">
                                                    <span className="text-xs text-cyan-400/70 font-mono uppercase">Est. Cost/Month</span>
                                                    <span className="text-lg font-bold text-green-400">
                                                        ${template.estimated_cost_per_month}
                                                    </span>
                                                </div>
                                            )}

                                            <Button
                                                className="w-full gap-2 mt-4"
                                                variant="secondary"
                                                onClick={() => handleProvision(template.id)}
                                                disabled={provisioning === template.id}
                                            >
                                                {provisioning === template.id ? (
                                                    <>
                                                        <Loader2 className="w-4 h-4 animate-spin" />
                                                        <span className="font-mono">PROVISIONING...</span>
                                                    </>
                                                ) : (
                                                    <>
                                                        <Zap className="w-4 h-4" />
                                                        <span className="font-mono">PROVISION NOW</span>
                                                    </>
                                                )}
                                            </Button>
                                        </div>
                                    </CardContent>
                                </Card>
                            ))}
                        </div>

                        {templates.length === 0 && (
                            <div className="text-center py-12">
                                <div className="relative inline-block">
                                    <div className="absolute inset-0 bg-purple-500/20 blur-2xl rounded-full"></div>
                                    <Package className="relative w-16 h-16 mx-auto mb-4 text-purple-400" />
                                </div>
                                <p className="text-xl font-mono text-cyan-300 mb-2">NO TEMPLATES AVAILABLE</p>
                                <p className="text-sm text-cyan-400/60">Check back later for provisioning templates</p>
                            </div>
                        )}
                    </>
                )}
            </main>
        </div>
    )
}
