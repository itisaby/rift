# Rift Backend Configuration
# Copy this to .env and fill in your values

# Environment
ENVIRONMENT=development
DEMO_MODE=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=INFO

# DigitalOcean Configuration
DIGITALOCEAN_API_TOKEN=your_digitalocean_token_here

# Prometheus Configuration (Optional - defaults to localhost:9090)
PROMETHEUS_URL=http://104.236.4.131:9090
PROMETHEUS_USER=
PROMETHEUS_PASSWORD=

# DigitalOcean Gradient AI Configuration
# Monitor Agent
MONITOR_AGENT_ENDPOINT=https://api.gradient.ai/v1/agents
MONITOR_AGENT_KEY=your_gradient_ai_key
MONITOR_AGENT_ID=your_monitor_agent_id

# Diagnostic Agent
DIAGNOSTIC_AGENT_ENDPOINT=https://api.gradient.ai/v1/agents
DIAGNOSTIC_AGENT_KEY=your_gradient_ai_key
DIAGNOSTIC_AGENT_ID=your_diagnostic_agent_id

# Remediation Agent
REMEDIATION_AGENT_ENDPOINT=https://api.gradient.ai/v1/agents
REMEDIATION_AGENT_KEY=your_gradient_ai_key
REMEDIATION_AGENT_ID=your_remediation_agent_id

# Provisioner Agent
PROVISIONER_AGENT_ENDPOINT=https://api.gradient.ai/v1/agents
PROVISIONER_AGENT_KEY=your_gradient_ai_key
PROVISIONER_AGENT_ID=your_provisioner_agent_id

# Knowledge Base
KNOWLEDGE_BASE_ID=your_knowledge_base_id

# Auto-Remediation Settings
AUTO_REMEDIATION_ENABLED=true
CONFIDENCE_THRESHOLD=0.85
MAX_COST_AUTO_APPROVE=50.0

# Terraform
TERRAFORM_WORKING_DIR=/tmp/rift_terraform
