# Rift Environment Configuration
# The infrastructure fixer that never sleeps

# ============================================
# DigitalOcean Configuration
# ============================================
DIGITALOCEAN_API_TOKEN=your_do_api_token_here

# ============================================
# DigitalOcean Gradient AI - Monitor Agent
# ============================================
MONITOR_AGENT_ENDPOINT=https://api.digitalocean.com/v2/ai/agents/your_monitor_agent_id
MONITOR_AGENT_KEY=your_monitor_agent_key_here
MONITOR_AGENT_ID=your_monitor_agent_id_here

# ============================================
# DigitalOcean Gradient AI - Diagnostic Agent
# ============================================
DIAGNOSTIC_AGENT_ENDPOINT=https://api.digitalocean.com/v2/ai/agents/your_diagnostic_agent_id
DIAGNOSTIC_AGENT_KEY=your_diagnostic_agent_key_here
DIAGNOSTIC_AGENT_ID=your_diagnostic_agent_id_here

# ============================================
# DigitalOcean Gradient AI - Remediation Agent
# ============================================
REMEDIATION_AGENT_ENDPOINT=https://api.digitalocean.com/v2/ai/agents/your_remediation_agent_id
REMEDIATION_AGENT_KEY=your_remediation_agent_key_here
REMEDIATION_AGENT_ID=your_remediation_agent_id_here

# ============================================
# Knowledge Base Configuration
# ============================================
KNOWLEDGE_BASE_ID=your_knowledge_base_id_here

# ============================================
# Monitoring Configuration
# ============================================
PROMETHEUS_URL=http://localhost:9090
PROMETHEUS_USER=
PROMETHEUS_PASSWORD=

# ============================================
# Terraform Configuration
# ============================================
TERRAFORM_WORKSPACE=rift
TERRAFORM_STATE_BUCKET=rift-tfstate
DO_SPACES_ACCESS_KEY=your_spaces_access_key_here
DO_SPACES_SECRET_KEY=your_spaces_secret_key_here
DO_SPACES_REGION=nyc3

# ============================================
# Application Configuration
# ============================================
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
LOG_LEVEL=INFO
ENVIRONMENT=development

# ============================================
# Security Configuration
# ============================================
API_SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# Demo Configuration
# ============================================
DEMO_MODE=true
AUTO_REMEDIATION_ENABLED=true
CONFIDENCE_THRESHOLD=0.85
MAX_COST_AUTO_APPROVE=50.00

# ============================================
# Droplet IPs (to be filled after creation)
# ============================================
CONTROL_PLANE_IP=
WEB_APP_IP=
API_SERVER_IP=
PROMETHEUS_IP=
